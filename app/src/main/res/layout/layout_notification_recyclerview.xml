<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_recyclerView_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_notification_recyclerView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:gravity="end"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="time"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/txt_notification_recyclerView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/txt_notification_recyclerView_time"
            android:layout_gravity="start"
            android:gravity="start"
            android:text="title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_notification_recyclerView_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="?android:attr/textColorPrimary" />

</LinearLayout>
