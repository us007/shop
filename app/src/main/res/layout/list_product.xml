<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:adjustViewBounds="true"
            android:src="@drawable/placeholder"
            android:background="@android:color/white"
            android:transitionName="product_img"
            android:id="@+id/recyclerView_product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recyclerView_product_no_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="text"
            android:gravity="start"
            />

        <TextView
            android:paddingTop="3dp"
            android:id="@+id/recyclerView_product_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="text"
            android:lines="2"
            android:ellipsize="end"
            android:maxLines="2"
            android:gravity="start"
            />

        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="5dp"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:paddingBottom="5dp"
                android:id="@+id/recyclerView_product_view_more_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="View More"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:layout_marginEnd="2dp"
                />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingTop="5dp"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:paddingBottom="5dp"
                android:layout_marginStart="2dp"
                android:id="@+id/recyclerView_product_request_quote_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:background="@drawable/textview_border"
                android:text="Request a Quote"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>